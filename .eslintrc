{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "arrow-body-style": 0,
    "import/no-unresolved": 0,
    "global-require": 0,
    "no-underscore-dangle": 0,
    "no-trailing-spaces": 0,
    "new-cap": 0,
    "space-before-function-paren": 0,
    "react/prefer-stateless-function": 0
  }
}
